<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to "#", class: "navbar-brand" do %>
    <%= image_tag "https://image.freepik.com/vecteurs-libre/bar-cocktails-neon-texte-boire-paille-cerises_1262-19509.jpg" %>
  <% end %>
  <h1 class=title> Les cocktails de Cyrielle </h1>
  <%= link_to "Add a cocktail", new_cocktail_path, class: "nav-link" %>
</div>

<div class="cards">
  <% @cocktails.each do |cocktail| %>
    <div class="card-category">
      <%= link_to cocktail.name.capitalize, cocktail_path(cocktail) %>
      <% if cocktail.picture.attached? %>
        <%= cl_image_tag cocktail.picture.key, crop: :fill %>
      <% end %>
    </div>
  <% end %>
</div>

